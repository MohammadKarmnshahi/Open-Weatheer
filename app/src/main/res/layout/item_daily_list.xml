<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/DayNameTV"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/all_xlarge_space"
        android:layout_marginTop="@dimen/all_large_space"
        android:layout_marginEnd="32dp"
        android:gravity="start"
        android:textColor="@color/primaryTextColor"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/DailyWeatherIconIV"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/DailyWeatherIconIV"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="24dp"
        android:maxWidth="@dimen/all_small_space"
        android:minWidth="@dimen/all_small_space"
        android:src="@drawable/ic_clear_sky_night"
        app:layout_constraintBottom_toBottomOf="@+id/DayNameTV"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/DayNameTV"
        app:layout_constraintTop_toTopOf="@+id/DayNameTV" />

    <TextView
        android:id="@+id/DailyTempTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:textColor="@color/secondaryTextColor"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/DailyWeatherIconIV"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/DailyWeatherIconIV" />
</androidx.constraintlayout.widget.ConstraintLayout>